{
  "name": "nlp-chatbot-rule-based",
  "version": "1.0.0",
  "description": "Rule-based schedule chatbot with WhatsApp integration and comprehensive testing",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "whatsapp": "node src/whatsapp.js",
    "schedbot": "node src/bot.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/nlpHelper.test.js tests/dateParser.test.js",
    "test:functional": "jest tests/bot.test.js",
    "test:integration": "jest tests/integration.test.js",
    "test:all": "node tests/runTests.js all",
    "test:runner": "node tests/runTests.js",
    "test:ci": "jest --ci --coverage --watchAll=false --testTimeout=10000",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:verbose": "VERBOSE_TESTS=1 jest --verbose",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html",
    "lint": "eslint src/**/*.js tests/**/*.js --fix || true",
    "clean": "rimraf coverage data/*.test* exports/test* exports/jadwal* backups/backup*",
    "health": "node -e \"const bot = require('./src/bot'); console.log(JSON.stringify(new bot().healthCheck(), null, 2))\"",
    "validate": "npm run lint && npm run test:ci",
    "demo": "node -e \"const bot = require('./src/bot'); const b = new bot(); console.log('Bot Demo:'); ['bantuan', 'tambah demo meeting jam 9', 'lihat jadwal', 'hapus demo'].forEach(cmd => console.log('>', cmd, '\\n', b.processMessage(cmd), '\\n'))\""
  },
  "keywords": [
    "chatbot",
    "nlp",
    "schedule",
    "whatsapp",
    "rule-based",
    "indonesian",
    "automation",
    "testing",
    "jest",
    "tdd"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.0",
    "csv-writer": "^1.6.0",
    "fuse.js": "^7.0.0",
    "chalk": "^4.1.2",
    "node-cron": "^3.0.3",
    "fs-extra": "^11.1.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "@types/node": "^20.5.0",
    "nodemon": "^3.0.1",
    "eslint": "^8.45.0",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "cross-env": "^7.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/whatsapp.js",
      "!src/index.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testTimeout": 10000,
    "verbose": true,
    "clearMocks": true,
    "restoreMocks": true
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nlp-chatbot-rule-based.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/nlp-chatbot-rule-based/issues"
  },
  "homepage": "https://github.com/yourusername/nlp-chatbot-rule-based#readme"
}