# SCHEDBOT Configuration
# Copy this file to .env and customize as needed

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/bot.log
DEBUG_MODE=false

# Bot Configuration
BOT_NAME=SCHEDBOT
DEFAULT_TIMEZONE=Asia/Jakarta
MAX_SCHEDULES_PER_DAY=10

# WhatsApp Configuration (jika diperlukan custom settings)
WHATSAPP_SESSION_NAME=schedbot-session
QR_CODE_TERMINAL=true

# Database Configuration
DATA_FILE_PATH=src/data.json
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h

# Response Configuration
RESPONSE_DELAY=1000
MAX_MESSAGE_LENGTH=500
ENABLE_REFLECTION=true

# Development Settings
NODE_ENV=development
PORT=3000